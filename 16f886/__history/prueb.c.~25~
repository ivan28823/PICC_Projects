#include <16f886.h>
#fuses HS
#fuses MCLR
#fuses NOWDT
#fuses NOPUT
#fuses NOLVP
#fuses NOPROTECT
#fuses NOCPD
#fuses NOBROWNOUT

#use delay(clock=20M)

#BYTE TRISA=0x85
#BYTE TRISB=0x86
#BYTE TRISC=0x87
#BYTE PORTA=0x05
#BYTE PORTB=0x06
#BYTE PORTC=0x07

#define LCD_ENABLE_PIN  PIN_B3                                   
#define LCD_RS_PIN      PIN_B1                                   
#define LCD_RW_PIN      PIN_B2                                   
#define LCD_DATA4       PIN_B4                                    
#define LCD_DATA5       PIN_B5                                   
#define LCD_DATA6       PIN_B6                                   
#define LCD_DATA7       PIN_B7  
#include <lcd.c>


void main()
{
   lcd_init();
   Trisb=0;
   Portb=255;
   Trisc=0;
   Portc=255;
   trisa=0;
   Porta=255;
   delay_ms(1000);
   while(true)
   {
      Printf(lcd_putc,"\fHola mundo");
      int a;
      for(a=0;a<255;a++)
      {
         Portc=a;
         Porta=a;
         delay_ms(100);
      }
   }
}
